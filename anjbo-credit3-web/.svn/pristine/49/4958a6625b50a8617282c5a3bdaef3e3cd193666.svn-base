<script src="./js/mui.min.js"></script>
<script src="./js/mui.picker.min.js"></script>
<script src="./js/jquery.min.js"></script>
<script>



mui.init();
mui.ready(function() {
	  var arr=[{
		value: 'yes',
		text: '同致诚'
	  }, {
		value: 'yes2',
		text: '同致诚2'
	  },{
		value: 'yes3',
		text: '同致诚3'
	  },{
		value: 'no',
		text: '否'
	  }];

for(var i=0; i<arr.length;i++){
   if(arr[i].value=="no"){$(".sel").val(arr[i].text)}
};
	  var userPicker = new mui.PopPicker();
	  userPicker.setData(arr);
      userPicker.pickers[0].setSelectedIndex(3, 200);
	  $(".sel").click(function(){
	
	  var _this=$(this);
	  userPicker.show(function(items) {
			_this.val((items[0].text));
			//返回 false 可以阻止选择框的关闭
			//return false;
		});
 
  });

	 
});
		 
</script>
</body>
</html>
