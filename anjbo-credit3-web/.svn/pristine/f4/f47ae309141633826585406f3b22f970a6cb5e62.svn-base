<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<ul class="breadcrumb relative">
				<li>
					<a>贷后管理</a>
					<span class="divider"></span>
				</li>
				<li class="active">全部订单</li>
			</ul>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12"> 
			<form class="form-inline search" style="margin-bottom:20px;margin-left:30px; ">
				<div class="form-group">
					<label>城市：</label>
					<select class="form-control" ng-model="page.cityCode" style="width: 100px;">
						<option value="">全部</option>
						<option ng-repeat="list in conditions.citys" ng-if="$index!=0" value="{{list.cityCode}}">{{list.cityName}}</option>
					</select>
				</div>
				<div class="form-group">
					<label >客户姓名：</label>
					<input type="text" class="form-control" ng-model="page.borrowerName">
				</div>
				<div class="form-group">
					<label >渠道经理：</label>
					<input type="text" class="form-control" ng-model="page.channelManagerName">
				</div>
				<div class="form-group">
					<label >受理员：</label>
					<input type="text" class="form-control" ng-model="page.acceptMemberName">
				</div>
				<div class="form-group">
					<label>还款状态：</label>
					<select class="form-control" ng-model="page.repaymentStatus">
						<option value="" >全部</option>
						<option value="1">待还款</option>
						<option value="2">部分还款</option>
						<option value="7">已结清</option>
						<option value="4">提前结清</option>
						<option value="8">还款失败</option>
						<!--
						<option value="5">已展期</option>
						-->
						<option value="6">已逾期</option>
						<option value="9">还款中</option>
					</select>
				</div>
				<div class="form-group">
					<label >放款时间：</label>
					<input size="16" type="text" ng-disabled="all" ng-model="page.startLendingTime" class="form-control form_date">-
					<input size="16" type="text" ng-disabled="all" ng-model="page.endLendingTime" class="form-control form_date">
				</div>
				<div class="form-group">
					<label >最新还款日：</label>
					<input size="16" type="text" ng-disabled="all" ng-model="page.startNewRepayment" class="form-control form_date">-
					<input size="16" type="text" ng-disabled="all" ng-model="page.endNewRepayment" class="form-control form_date">
				</div>
				<button type="submit" class="btn btn-default" ng-click="query()" style="margin-bottom:10px; margin-right:10px;">
					查询
				</button>
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 bs-table">
			<table bs-table-control="orderList" data-show-export="false" id="table" ></table>
		</div>
	</div>
</div>
