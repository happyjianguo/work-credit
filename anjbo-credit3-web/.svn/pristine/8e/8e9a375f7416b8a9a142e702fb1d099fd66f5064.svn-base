<div class="row huarong-update-file">
    <div class="col-md-12">
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>分类</th>
                <th>资料名称</th>
                <th>文档数</th>
                <th>操作</th>
                <th>说明</th>
            </tr>
            </thead>
            <tbody ng-repeat="pType in huarongImageDatas.topType">
                <tr  ng-repeat="sType in pType.childrenType">
                    <td ng-if="$index==0" rowspan="{{pType.childrenType.length}}" class="white-bg"></br><span ng-bind="pType.name"></span></br></td>
                    <td ng-bind="sType.name"></td>
                    <td ng-bind="sType.listImgs.length||'0'"></td>
                    <td>
                        <!--上传图片col-md-12 -->
                        <span class="caozuo red-word" ng-show="isImgEdit">
                            <a data-fancybox="iframe" data-src="/plugins/uploadify/upload_image.html?returnFun=huarongUpdateFile" ng-click="selectTypeCheck(sType.id);" data-type="iframe" href="javascript:void(0);">上传</a>
                        </span>
                         
                         <span class="caozuo chakan-img gallerys"   ng-if="sType.listImgs[0].filePath && sType.listImgs[0].filePath!='' && sType.listImgs[0].filePath!=null">
<!--                             <a href="javascript:void(0);" class="huarong-img-view" onclick="lookImg()">查看图片</a> -->
<!--                             <img  ng-repeat="imgMap in sType.listImgs" src="{{imgMap.filePath}}" ng-show="imgMap.filePath.indexOf('pdf')==-1" class="gallery-pic" style="display: none;"/> -->
                             <img  title="查 看 图 片"  ng-repeat="imgMap in sType.listImgs" src="{{imgMap.filePath}}" class="gallery-pic"  alt="查看图片" ng-show="true||($index==0 && imgMap.filePath.indexOf('pdf')==-1)" height="30" width="30"/>
                         </span>
                         <span  ng-repeat="imgMap in sType.listImgs"  ng-if="sType.listImgs[0].filePath && sType.listImgs[0].filePath!='' && sType.listImgs[0].filePath!=null">
                            <a href="{{imgMap.filePath}}" target="_blank" class="gallery-pic"  ng-show="imgMap.filePath.indexOf('pdf')!=-1" hieght="30" width="30"> 查看合同</a>
                         </span>
						
                        <span class="caozuo chakan-img gallerys"  ng-if="sType.listImgs[0].url && sType.listImgs[0].url!='' && sType.listImgs[0].url!=null">
                               <img  title="查 看 图 片"  ng-repeat="imgMap in sType.listImgs" src="{{imgMap.url}}" class="gallery-pic"  alt="查看图片" ng-show="true||($index==0 && imgMap.filePath.indexOf('pdf')==-1)" height="30" width="30"/>
<!--                             <a href="javascript:void(0);" class="huarong-img-view" onclick="lookImg()">查看图片</a> -->
<!--                             <img  ng-repeat="imgMap in sType.listImgs" src="{{imgMap.url}}"  ng-show="imgMap.filePath.indexOf('pdf')==-1" class="gallery-pic" style="display: none;"/> -->
                        </span>
                         <span  ng-repeat="imgMap in sType.listImgs"  ng-if="sType.listImgs[0].url && sType.listImgs[0].url!='' && sType.listImgs[0].url!=null">
                            <a href="{{imgMap.url}}" target="_blank" class="gallery-pic"  ng-show="imgMap.url.indexOf('pdf')!=-1" hieght="30" width="30"> 查看合同</a>
                         </span>
                        <input type="hidden" name="typeId" value="{{sType.id}}">
                    </td>
                    <td ng-bind="sType.remark"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>




