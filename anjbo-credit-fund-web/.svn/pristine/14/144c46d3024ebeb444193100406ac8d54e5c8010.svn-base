<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <ul class="breadcrumb">
                <li>
                    <a>要件管理</a>
                    <span class="divider"></span>
                </li>
                <li class="active">柜子管理</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form class="form-inline" style="margin-bottom:20px;margin-left:30px; ">
                <div class="form-group">
                    <label>城市：</label>
                    <select class="form-control" ng-model="page.city">
                        <option value="" >全部</option>
                        <option ng-repeat="city in cityList" value="{{city}}">{{city}}</option>
                    </select>
                </div>
                <div class="form-group">
                    <label >要件柜编号：</label>
                    <input type="text" class="form-control" ng-model="page.boxNo">
                </div>
                <div class="form-group">
                    <label>使用情况：</label>
                    <select class="form-control" ng-model="page.useStatus">
                        <option value="" >全部</option>
                        <option value="1">使用中</option>
                        <option value="0">空闲中</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>设备状况：</label>
                    <select class="form-control" ng-model="page.deviceStatus">
                        <option value="" >全部</option>
                        <option value="1">正常</option>
                        <option value="0">离线</option>
                    </select>
                </div>
                <div class="form-group">
                    <label >客户姓名：</label>
                    <input type="text" id="customerName" class="form-control" maxlength="15" ng-model="page.customerName">
                </div>


                <button type="submit" class="btn btn-default" ng-click="query()" style="margin-bottom:10px; margin-right:10px;">
                    查询
                </button>
                <button type="submit" class="btn btn-default" ng-click="reset()" style="margin-bottom:10px; margin-right:10px;">
                    重置
                </button>

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table bs-table-control="boxList"  id="table"></table>
        </div>
    </div>
</div>

